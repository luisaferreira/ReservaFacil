@page
@model ReservaFacil.Web.Pages.Usuarios.Cadastro

@{
    Layout = "_Layout";
    ViewData["Title"] = "Adicionar Usuário";
}

<link rel="stylesheet" href="~/css/formsHeader.css">

@await Html.PartialAsync("Shared/_FormsHeader", "Adicionar Usuário")

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="Nome" class="form-label">Nome:</label>
            <input type="text" class="form-control" id="Nome" placeholder="Digite o nome">
        </div>
        <div class="col-md-6 mb-3">
            <label for="Matricula" class="form-label">Matrícula:</label>
            <input type="text" class="form-control" id="Matricula" placeholder="Digite a matrícula">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="email" class="form-label">E-mail:</label>
            <input type="email" class="form-control" id="email" placeholder="Digite o e-mail">
        </div>
        <div class="col-md-6 mb-3">
            <label for="perfil" class="form-label">Perfil:</label>
            <select class="form-select" aria-label="perfil" id="perfil">
                <option selected>Escolha um perfil</option>
                <option value="1">Administrador</option>
                <option value="2">Professor</option>
                <option value="3">Visitante</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mb-3">
            <label for="permissoes" class="form-label">Permissões:</label>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="gerenciarUsuarios">
                <label class="form-check-label" for="gerenciarUsuarios">
                    Gerenciar Usuários
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="gerenciarReservas" checked>
                <label class="form-check-label" for="gerenciarReservas">
                    Gerenciar Reservas
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="gerenciarSalas" checked>
                <label class="form-check-label" for="gerenciarSalas">
                    Desbloquear Porta
                </label>
            </div>
        </div>
    </div>

    <hr/>

    <div class="mt-4 d-flex justify-content-end">
        <button type="submit" class="btn btn-custom">Adicionar</button>
    </div>
</div>
