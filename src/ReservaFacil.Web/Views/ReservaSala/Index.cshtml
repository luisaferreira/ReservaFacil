@{
    Layout = "_Layout";
}

@await Html.PartialAsync("_Header", new { Titulo = "Reserva de Salas", PaginaInicial = true })

<div class="container mt-4">
    <div class="text-end">
        <a class="btn btn-primary" href="ReservaSala/Reservar">Reservar Sala</a>
        <hr />
    </div>
    <form id="formPesquisa">
        <div class="row">
            <div class="col-md-9 mb-3">
                <label for="pesquisa" class="form-label">Pesquisa:</label>
                <input type="text" class="form-control" id="pesquisa" name="pesquisa" />
            </div>
            <div class="col-md-3 mb-3">
                <label for="statusReserva" class="form-label">Status de Reserva:</label>
                <select class="form-select" id="statusReserva" name="statusReserva">
                    <option value="0"></option>
                    <option value="1">Reservada</option>
                    <option value="2">Cancelada</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label for="periodoReserva" class="form-label">Período de Reserva:</label>
                <input type="date" class="form-control" id="periodoReserva" name="periodoReserva" />
            </div>
        </div>
    </form>

    <div class="text-end">
        <hr />
        <a class="btn btn-primary" id="btnPesquisar">Pesquisar</a>
    </div>

</div>