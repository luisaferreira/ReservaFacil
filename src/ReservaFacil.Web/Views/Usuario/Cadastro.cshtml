<div class="container mt-4">
    <form method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="Nome" class="form-label">Nome:</label>
                <input type="text" class="form-control" id="Nome" name="Nome" placeholder="Digite o nome"/>
            </div>
            <div class="col-md-6 mb-3">
                <label for="Matricula" class="form-label">Matrícula:</label>
                <input type="text" class="form-control" id="Matricula" name="Matricula" placeholder="Digite a matrícula"/>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="Email" class="form-label">E-mail:</label>
                <input type="email" class="form-control" id="Email" name="Email" placeholder="Digite o e-mail"/>
            </div>
            <div class="col-md-6 mb-3">
                <label for="Perfil" class="form-label">Perfil:</label>
                <select class="form-select" aria-label="perfil" id="Perfil" name="PerfilId">
                    <option value="">Escolha um perfil</option>
                    <option value="1">Administrador</option>
                    <option value="2">Professor</option>
                    <option value="3">Visitante</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 mb-3">
                <label for="Permissoes" class="form-label">Permissões:</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="GerenciarUsuarios" name="PermissaoIds" value="1"/>
                    <label class="form-check-label" for="GerenciarUsuarios">
                        Gerenciar Usuários
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="GerenciarReservas" name="PermissaoIds" value="2"/>
                    <label class="form-check-label" for="GerenciarReservas">
                        Gerenciar Reservas
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="GerenciarSalas" name="PermissaoIds" value="3"/>
                    <label class="form-check-label" for="GerenciarSalas">
                        Desbloquear Porta
                    </label>
                </div>
            </div>
        </div>

        <hr />

        <div class="mt-4 d-flex justify-content-end">
            <button type="submit" class="btn btn-custom">Adicionar</button>
        </div>
    </form>
</div>
