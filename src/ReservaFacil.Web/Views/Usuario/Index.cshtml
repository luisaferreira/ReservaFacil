@model ReservaFacil.Application.ViewModels.UsuarioViewModel;

@{
    Layout = "_Layout";
}

@await Html.PartialAsync("_Header", new { Titulo = "Usuários", PaginaInicial = true })

@section Scripts {
    <script src="~/js/views/Usuario/index.js"></script>
}

<div class="container mt-4">
    <div class="text-end">
        <a class="btn btn-primary" href="Usuario/Cadastro">Adicionar Usuário</a>
        <hr />
    </div>
    @if (Model != null && Model.Usuarios.Any())
    {
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" class="w-40">Nome</th>
                        <th scope="col" class="w-20 text-center">Matrícula</th>
                        <th scope="col" class="w-20 text-center">Perfil</th>
                        <th scope="col" class="w-10 text-center">Ativo?</th>
                        <th scope="col" class="w-10 text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.Usuarios)
                    {
                        var ativo = usuario.Ativo ? "Sim" : "Não";

                        <tr>
                            <td>@usuario.Nome</td>
                            <td class="text-center">@usuario.Matricula</td>
                            <td class="text-center">@Model.Perfis.FirstOrDefault(x => x.Id == usuario.PerfilId).Nome</td>
                            <td class="text-center">@ativo</td>
                            <td class="text-center">
                                <a class="cursor-pointer" onclick="editarUsuario(@usuario.Id)">
                                    <i class="fa-solid fa-user-pen text-color-primary"></i>
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-center">
            <ul class="pagination mt-2 mb-4">
                <li class="pagination-item pagination-item-disabled text-center"><a>&laquo;</a></li>
                <li class="pagination-item pagination-item-active text-center"><a>1</a></li>
                <li class="pagination-item text-center"><a>2</a></li>
                <li class="pagination-item text-center"><a>3</a></li>
                <li class="pagination-item text-center"><a>4</a></li>
                <li class="pagination-item text-center"><a>5</a></li>
                <li class="pagination-item text-center"><a>&raquo;</a></li>
            </ul>
        </div>
    }
    else
    {
        <p>Não há registros!!</p>
    }
</div>
