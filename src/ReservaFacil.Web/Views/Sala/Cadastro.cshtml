@model ReservaFacil.Application.DTOs.UsuarioDTO;

@{
    Layout = "_Layout";
    ViewData["Title"] = "Adicionar Sala";
}

<link rel="stylesheet" href="~/css/site.css">
<link rel="stylesheet" href="~/css/views/sala/cadastro.css">

@await Html.PartialAsync("_Header", new { Titulo = "Adicionar Sala", PaginaInicial = false })

<div class="container mt-4">
    <form method="post" id="salaForm" novalidate>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="Numero" class="form-label">Número:</label>
                <input type="number" class="form-control" id="Numero" name="Numero" placeholder="Digite o número"
                       maxlength="2"/>
            </div>
            <div class="col-md-6 mb-3">
                <label for="Bloco" class="form-label">Bloco:</label>
                <input type="text" class="form-control" id="Bloco" name="Bloco" placeholder="Digite o Bloco"
                       maxlength="1"/>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="Perfil" class="form-label">Perfil:</label>
                <select class="form-select" aria-label="perfil" id="Perfil" name="PerfilId">
                    <option value="">Escolha um perfil</option>
                    <option value="1">Técnico em Informática</option>
                    <option value="2">Técnico em Meio Ambiente</option>
                    <option value="3">Técnico em Eletro Eletrônica </option>
                    <option value="4">Análise e Desenvolvimento de Sistemas</option>
                    <option value="5">Engenharia Elétrica</option>
                </select>
            </div>

            <div class="col-md-6 d-flex align-items-center">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="Laboratorio" checked>
                    <label class="form-check-label" for="Laboratorio">Laboratório</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 mb-3">
                <label for="HorariosBloqueados" class="form-label">Horários Bloqueados:</label>
                <button id="addHorario" class="btn-addHorario btn btn-light" type="button"
                        aria-label="Adicionar Horário">
                    <i class="fa-solid fa-plus"></i>
                </button>
            </div>
        </div>

        <div id="horariosContainer">
            <div id="horarioTemplate" class="mb-3 horario-block" style="display: none;">
                <div class="row">
                    <div class="col-md-3">
                        <label for="HorarioInicial[0]" class="form-label">Horário Inicial:</label>
                        <input type="datetime-local" name="HorarioInicial[0]" class="form-control" required
                               aria-label="Horário Inicial">
                    </div>
                    <div class="col-md-3">
                        <label for="HorarioFinal[0]" class="form-label">Horário Final:</label>
                        <div class="d-flex align-items-center">
                            <input type="datetime-local" name="HorarioFinal[0]" class="form-control" required
                                   aria-label="Horário Final">
                            <button class="btn-removeHorario btn btn-light" type="button" aria-label="Remover horário">
                                <i class="fa-solid fa-x"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr/>

        <div class="mt-4 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Adicionar</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/sala/cadastro.js"></script>
}
